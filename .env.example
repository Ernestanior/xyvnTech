# 应用配置
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# 数据库配置
# 本地开发使用 PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/xyvn_dev"
# Vercel Postgres 使用（生产环境）
# DATABASE_URL="postgres://default:xxx@xxx.postgres.vercel-storage.com:5432/verceldb"
DIRECT_URL="postgresql://user:password@localhost:5432/xyvn_dev"

# CMS 配置（Sanity.io）
NEXT_PUBLIC_SANITY_PROJECT_ID="your_project_id"
NEXT_PUBLIC_SANITY_DATASET="production"
SANITY_API_TOKEN="your_api_token"

# 邮件服务（Resend）
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"
RESEND_FROM_EMAIL="contact@xyvn.com"
RESEND_TO_EMAIL="team@xyvn.com"

# 文件存储（Vercel Blob）
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxx"

# 图片存储（Cloudinary - 可选）
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# 分析和监控
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your_analytics_id"

# 错误追踪（Sentry）
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_AUTH_TOKEN="your_auth_token"

# 缓存（Vercel KV - Redis）
KV_REST_API_URL="https://xxx.kv.vercel-storage.com"
KV_REST_API_TOKEN="your_kv_token"

# 认证（NextAuth.js - 可选）
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_min_32_chars"

# 第三方服务
# Google Maps API（如需地图功能）
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_key"

# Stripe（如需支付功能）
STRIPE_PUBLIC_KEY="pk_test_xxxxxxxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxx"

# 速率限制
RATE_LIMIT_MAX_REQUESTS="10"
RATE_LIMIT_WINDOW_MS="60000"

# 功能开关
ENABLE_ANALYTICS="true"
ENABLE_ERROR_TRACKING="true"
ENABLE_PERFORMANCE_MONITORING="true"

# 开发工具
# 是否显示调试信息
DEBUG="false"
# 是否启用 React DevTools
NEXT_PUBLIC_ENABLE_DEVTOOLS="true"
